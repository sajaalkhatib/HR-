@{
	Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Evaluation</title>
    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #1e1e2f, #2a2a40);
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #fff;
        }

        .evaluation-form {
            background: #2a2a40;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 600px;
        }

        h1 {
            text-align: center;
            color: #fff;
            margin-bottom: 1.5rem;
            font-size: 2rem;
            font-weight: 600;
        }

        .question {
            margin-bottom: 4.5rem;
            font-size: 17px;
        }

            .question p {
                font-weight: bold;
                color: #ddd;
                margin-bottom: 0.5rem;
            }

        .options {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

            .options label {
                display: flex;
                align-items: center;
                background: #3a3a50;
                padding: 0.75rem 1.5rem;
                border-radius: 10px;
                border: 1px solid #444;
                cursor: pointer;
                transition: background 0.3s ease, transform 0.2s ease;
                box-shadow: 5px 5px 10px #1e1e2f, -5px -5px 10px #3a3a50;
            }

                .options label:hover {
                    background: #4a4a60;
                    transform: translateY(-2px);
                }

            .options input[type="radio"] {
                margin-right: 0.5rem;
                appearance: none;
                width: 16px;
                height: 16px;
                border: 2px solid #00bcd4;
                border-radius: 50%;
                transition: border-color 0.3s ease;
            }

                .options input[type="radio"]:checked {
                    background: #00bcd4;
                }

        button {
            display: block;
            width: 100%;
            padding: 1rem;
            background: linear-gradient(135deg, #00bcd4, #0097a7);
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.2s ease;
            box-shadow: 5px 5px 10px #1e1e2f, -5px -5px 10px #3a3a50;
        }

            button:hover {
                background: linear-gradient(135deg, #0097a7, #00bcd4);
                transform: translateY(-2px);
            }

        .result {
            margin-top: 1.5rem;
            text-align: center;
            font-size: 1.2rem;
            color: #fff;
        }

            .result span {
                font-weight: bold;
                color: #00bcd4;
            }
    </style>
</head>
<body>
    <div class="evaluation-form">
        <h1>Employee Evaluation</h1>
        <form id="evaluationForm" asp-action="Questions" asp-controller="Manager">
            <!-- Question 1 -->
            <div class="question">
                <p>1. Quality of Work: How would you rate the quality of work produced by the employee?</p>
                <div class="options">
                    <label><input type="radio" name="q1" value="3"> Excellent</label>
                    <label><input type="radio" name="q1" value="2"> Very Good</label>
                    <label><input type="radio" name="q1" value="1"> Good</label>
                    <label><input type="radio" name="q1" value="-1"> Bad</label>
                </div>
            </div>

            <!-- Question 2 -->
            <div class="question">
                <p>2. Punctuality: Does the employee consistently meet deadlines and arrive on time?</p>
                <div class="options">
                    <label><input type="radio" name="q2" value="3"> Excellent</label>
                    <label><input type="radio" name="q2" value="2"> Very Good</label>
                    <label><input type="radio" name="q2" value="1"> Good</label>
                    <label><input type="radio" name="q2" value="-1"> Bad</label>
                </div>
            </div>

            <!-- Question 3 -->
            <div class="question">
                <p>3. Teamwork: How well does the employee collaborate with team members?</p>
                <div class="options">
                    <label><input type="radio" name="q3" value="3"> Excellent</label>
                    <label><input type="radio" name="q3" value="2"> Very Good</label>
                    <label><input type="radio" name="q3" value="1"> Good</label>
                    <label><input type="radio" name="q3" value="1"> Bad</label>
                </div>
            </div>

            <!-- Question 4 -->
            <div class="question">
                <p>4. Communication Skills: How effective is the employee's communication with colleagues and managers?</p>
                <div class="options">
                    <label><input type="radio" name="q4" value="3"> Excellent</label>
                    <label><input type="radio" name="q4" value="2"> Very Good</label>
                    <label><input type="radio" name="q4" value="1"> Good</label>
                    <label><input type="radio" name="q4" value="1"> Bad</label>
                </div>
            </div>

            <!-- Question 5 -->
            <div class="question">
                <p>5. Problem-Solving Skills: How well does the employee handle challenges and solve problems?</p>
                <div class="options">
                    <label><input type="radio" name="q5" value="4"> Excellent</label>
                    <label><input type="radio" name="q5" value="3"> Very Good</label>
                    <label><input type="radio" name="q5" value="2"> Good</label>
                    <label><input type="radio" name="q5" value="1"> Bad</label>
                </div>
            </div>

            <!-- Question 6 -->
            <div class="question">
                <p>6. Adaptability: How well does the employee adapt to changes in the workplace?</p>
                <div class="options">
                    <label><input type="radio" name="q6" value="3"> Excellent</label>
                    <label><input type="radio" name="q6" value="2"> Very Good</label>
                    <label><input type="radio" name="q6" value="1"> Good</label>
                    <label><input type="radio" name="q6" value="-1"> Bad</label>
                </div>
            </div>

            <!-- Question 7 -->
            <div class="question">
                <p>7. Initiative: Does the employee take initiative and go beyond their assigned tasks?</p>
                <div class="options">
                    <label><input type="radio" name="q7" value="3"> Excellent</label>
                    <label><input type="radio" name="q7" value="2"> Very Good</label>
                    <label><input type="radio" name="q7" value="1"> Good</label>
                    <label><input type="radio" name="q7" value="-1"> Bad</label>
                </div>
            </div>

            <!-- Question 8 -->
            <div class="question">
                <p>8. Professionalism: How would you rate the employee's professionalism and attitude at work?</p>
                <div class="options">
                    <label><input type="radio" name="q8" value="3"> Excellent</label>
                    <label><input type="radio" name="q8" value="2"> Very Good</label>
                    <label><input type="radio" name="q8" value="1"> Good</label>
                    <label><input type="radio" name="q8" value="-1"> Bad</label>
                </div>
            </div>

            <!-- Question 9 -->
            <div class="question">
                <p>9. Productivity: How productive is the employee in completing their tasks?</p>
                <div class="options">
                    <label><input type="radio" name="q9" value="3"> Excellent</label>
                    <label><input type="radio" name="q9" value="2"> Very Good</label>
                    <label><input type="radio" name="q9" value="1"> Good</label>
                    <label><input type="radio" name="q9" value="-1"> Bad</label>
                </div>
            </div>

            <!-- Question 10 -->
            <div class="question">
                <p>10. Attendance: How consistent is the employee's attendance?</p>
                <div class="options">
                    <label><input type="radio" name="q10" value="3"> Excellent</label>
                    <label><input type="radio" name="q10" value="2"> Very Good</label>
                    <label><input type="radio" name="q10" value="1"> Good</label>
                    <label><input type="radio" name="q10" value="-1"> Bad</label>
                </div>
            </div>

            <button type="submit" onclick="calculateScore()">Submit Evaluation</button>
        </form>

        <div class="result">
            <p>Final Score: <span id="finalScore">0</span> / 10</p>
        </div>
    </div>

    <script>
        function calculateScore() {
            let totalScore = 0;

            // Loop through all 10 questions
            for (let i = 1; i <= 10; i++) {
                const selectedOption = document.querySelector(`input[name="q${i}"]:checked`);
                if (selectedOption) {
                    totalScore += parseInt(selectedOption.value);
                }
            }

            // Ensure the score is between 0 and 10
            totalScore = Math.max(0, Math.min(10, totalScore));

            // Display the final score
            document.getElementById("finalScore").textContent = totalScore;
        }
    </script>
</body>
</html>