<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
	<link rel="icon" type="image/png" href="../assets/img/favicon.ico">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>Light Bootstrap Dashboard - Free Bootstrap 4 Admin Dashboard by Creative Tim</title>
	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />

	<!-- Fonts and icons -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

	<!-- CSS Files -->
	<link href="~/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/css/light-bootstrap-dashboard.css?v=2.0.0" rel="stylesheet" />

	<!-- Demo CSS (Just for demo purpose, don't include in your project) -->
	<link href="../assets/css/demo.css" rel="stylesheet" />

	<script src="/lib/chart/chart.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

	<style>
		body {
			margin: 0;
			font-family: "Open Sans", sans-serif;
			font-size: 1rem;
			font-weight: 400;
			line-height: 1.5;
			color: #6C7293;
			background-color: white;
			-webkit-text-size-adjust: 100%;
			-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
		}

		.sidebar-wrapper {
			background-color: rgba(21, 34, 43, 0.85) !important;
		}


	</style>
</head>

<body>
	<div " class="wrapper">
		<div class="sidebar" data-image="@Url.Content("~/image/HRoot_Logo-removebg-preview.png")">
			<div class="sidebar-wrapper">
				<div class="logo">
					<h1 class="sitename"><img src="~/image/HRoot_Logo-removebg-preview.png" style="max-height:46px !important" alt="Alternate Text" /></h1>
				</div>
				<ul class="nav">
					<li>
						<a class="nav-link" href="@Url.Action("LeaveRequests", "Hrs")">
							<i class="fas fa-table"></i>
							<p>Leave Requests</p>
						</a>
					</li>
					<li>
						<a class="nav-link" href="@Url.Action("Feedback", "Hrs")">
							<i class="fas fa-comment"></i>
							<p>Feedback</p>
						</a>
					</li>
					<li>
						<a class="nav-link" href="@Url.Action("Index", "Hrs")">
							<i class="fas fa-users"></i>
							<p>Hr Team</p>
						</a>
					</li>
					<li class="nav-item active">
						<a class="nav-link" href="@Url.Action("Index", "Departments")">
							<i class="fas fa-building"></i>
							<p>Department</p>
						</a>
					</li>
					<li>
						<a class="nav-link" href="@Url.Action("Manager", "Hrs")">
							<i class="fas fa-user"></i>
							<p>Managers</p>
						</a>
					</li>
					<li>
						<a class="nav-link" href="@Url.Action("Employee", "Hrs")">
							<i class="fas fa-users"></i>
							<p>Employees</p>
						</a>
					</li>
					<li>
						<a class="nav-link" href="@Url.Action("Evaluation", "Hrs")">
							<i class="fas fa-star"></i>
							<p>Evaluation</p>
						</a>
					</li>
					<li>
						<a class="nav-link" asp-action="Logout" asp-controller="Manager">
							<i class="fas fa-sign-out-alt"></i>
							<p>Logout</p>
						</a>
					</li>
				</ul>
			</div>
		</div>

		<div class="main-panel">
			<div class="container">
			@RenderBody()
			</div>
		</div>
	</div>

	<!-- JS Files -->
	<script src="../assets/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
	<script src="../assets/js/core/popper.min.js" type="text/javascript"></script>
	<script src="../assets/js/core/bootstrap.min.js" type="text/javascript"></script>
	<script src="../assets/js/plugins/bootstrap-switch.js"></script>
	<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
	<script src="../assets/js/plugins/chartist.min.js"></script>
	<script src="../assets/js/plugins/bootstrap-notify.js"></script>
	<script src="../assets/js/light-bootstrap-dashboard.js?v=2.0.0" type="text/javascript"></script>
	<script src="../assets/js/demo.js"></script>
</body>
</html>
