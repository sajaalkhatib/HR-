@model IEnumerable<BIGMVC_project.Models.Hr>

@{
    ViewData["Title"] = "HR Team";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-primary">HR Team Management</h1>
        <div>
            <a asp-action="ExportHRToPDF" asp-controller="Hrs" class="btn btn-outline-primary me-2">
                <i class="bi bi-file-earmark-pdf"></i> Export PDF
            </a>
            <a asp-action="Createe" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Add New HR
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col" class="text-nowrap"># ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="HRDetails" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info me-2">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-warning me-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transform: translateX(4px);
        transition: all 0.3s ease;
    }

    .table-dark {
        background-color: #2c3e50;
    }

    .card {
        border-radius: 0.5rem;
        border: none;
    }

    .btn-group .btn {
        border-radius: 0.25rem;
    }

    .bi {
        margin-right: 0.5rem;
    }
</style>